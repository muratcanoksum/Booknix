@model IEnumerable<Booknix.Domain.Entities.User>
@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
}

<!-- CSRF token for AJAX requests -->
@Html.AntiForgeryToken()

<div class="bg-white rounded-lg shadow-md p-6 mb-6">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-semibold text-gray-800">
            <i class="fas fa-users text-indigo-500 mr-2"></i> Kullanıcı Yönetimi
        </h2>

        <div class="relative w-64">
            <input type="text" id="user-search" placeholder="Kullanıcı ara..."
                   class="w-full border rounded-md px-3 py-2 text-sm focus:ring-indigo-500 focus:border-indigo-500" />
            <i class="fa-solid fa-magnifying-glass absolute right-3 top-3 text-gray-400"></i>
        </div>

        <button class="px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 flex items-center shadow-sm transition-all duration-200"
                onclick="openNewUserModal()">
            <i class="fas fa-plus mr-2"></i> Yeni Kullanıcı
        </button>
    </div>

    <div class="overflow-x-auto">
        <table class="min-w-full bg-white border border-gray-200 rounded-lg overflow-hidden">
            <thead>
                <tr class="bg-gray-50 border-b border-gray-200">
                    <th class="py-3 px-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Kullanıcı Adı
                    </th>
                    <th class="py-3 px-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        E-posta
                    </th>
                    <th class="py-3 px-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Rol
                    </th>
                    <th class="py-3 px-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        E-posta Doğrulanmış
                    </th>
                    <th class="py-3 px-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        İşlemler
                    </th>
                </tr>
            </thead>
            <tbody id="userContainer" class="divide-y divide-gray-200">
                @foreach (var user in Model)
                {
                    <tr id="userCard" class="hover:bg-gray-50 transition-colors duration-150">
                        <td class="py-4 px-4 text-sm">
                            <div class="flex items-center">
                                <span class="font-medium text-gray-700">@user.FullName</span>
                            </div>
                        </td>
                        <td class="py-4 px-4 text-sm text-gray-600">@user.Email</td>
                        <td class="py-4 px-4 text-sm">
                            @{
                                var roleBadgeClass = user.Role?.Name switch
                                {
                                    "Admin" => "bg-purple-100 text-purple-800 border-purple-200",
                                    "Employee" => "bg-blue-100 text-blue-800 border-blue-200",
                                    "Client" => "bg-green-100 text-green-800 border-green-200",
                                    _ => "bg-gray-100 text-gray-800 border-gray-200"
                                };
                                
                                var roleIcon = user.Role?.Name switch
                                {
                                    "Admin" => "fas fa-user-shield",
                                    "Employee" => "fas fa-user-tie",
                                    "Client" => "fas fa-user",
                                    _ => "fas fa-question"
                                };
                            }
                            <span class="inline-flex items-center px-3 py-1.5 rounded-full text-xs font-medium border @roleBadgeClass">
                                <i class="@roleIcon mr-1.5"></i>
                                @(user.Role?.Name ?? "Bilinmiyor")
                            </span>
                        </td>
                        <td class="py-4 px-4 text-sm">
                            @if (user.IsEmailConfirmed)
                            {
                                <span class="inline-flex items-center px-3 py-1.5 rounded-full text-xs font-medium bg-green-100 text-green-800 border border-green-200">
                                    <i class="fas fa-check-circle mr-1.5"></i> Doğrulanmış
                                </span>
                            }
                            else
                            {
                                <span class="inline-flex items-center px-3 py-1.5 rounded-full text-xs font-medium bg-red-100 text-red-800 border border-red-200">
                                    <i class="fas fa-times-circle mr-1.5"></i> Doğrulanmamış
                                </span>
                            }
                        </td>
                        <td class="py-4 px-4 text-sm">
                            <div class="flex space-x-3">
                                <button class="text-blue-600 hover:text-blue-800 transition-colors duration-150 bg-blue-50 hover:bg-blue-100 p-2 rounded-full" 
                                        onclick="openEditUserModal('@user.Id', '@user.FullName', '@user.Email', '@user.RoleId')"
                                        title="Düzenle">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="text-red-600 hover:text-red-800 transition-colors duration-150 bg-red-50 hover:bg-red-100 p-2 rounded-full"
                                        onclick="confirmDeleteUser('@user.Id', '@user.FullName')"
                                        title="Sil">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbodyid="test">
        </table>
    </div>
</div>

<!-- Edit User Modal -->
<div id="editUserModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden flex items-center justify-center backdrop-blur-sm">
    <div class="bg-white rounded-lg shadow-xl w-full max-w-md mx-4 transform transition-all">
        <div class="flex justify-between items-center p-5 border-b">
            <h3 class="text-lg font-medium text-gray-700">Kullanıcı Düzenle</h3>
            <button type="button" class="text-gray-400 hover:text-gray-500" onclick="closeEditUserModal()">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <form id="editUserForm" class="p-6 space-y-4">
            <input type="hidden" id="editUserId" name="id">
            
            <div>
                <label for="editFullName" class="block text-sm font-medium text-gray-700 mb-1">
                    Tam Ad
                </label>
                <input type="text" id="editFullName" name="fullName" class="w-full p-2.5 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-300 focus:border-indigo-500 outline-none transition-all">
            </div>
            
            <div>
                <label for="editEmail" class="block text-sm font-medium text-gray-700 mb-1">
                    E-posta
                </label>
                <input type="email" id="editEmail" name="email" class="w-full p-2.5 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-300 focus:border-indigo-500 outline-none transition-all">
            </div>
            
            <div>
                <label for="editRoleId" class="block text-sm font-medium text-gray-700 mb-1">
                    Rol
                </label>
                <select id="editRoleId" name="roleId" class="w-full p-2.5 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-300 focus:border-indigo-500 outline-none transition-all">
                    @foreach (var role in ViewBag.Roles)
                    {
                        <option value="@role.Id">@role.Name</option>
                    }
                </select>
            </div>
            
            <div class="flex justify-end pt-4">
                <button type="button" class="px-4 py-2 bg-gray-200 text-gray-800 rounded-md mr-2 hover:bg-gray-300 transition-colors shadow-sm" onclick="closeEditUserModal()">
                    İptal
                </button>
                <button type="submit" class="px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 transition-colors shadow-sm">
                    Kaydet
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div id="deleteUserModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden flex items-center justify-center backdrop-blur-sm">
    <div class="bg-white rounded-lg shadow-xl w-full max-w-md mx-4 transform transition-all">
        <div class="flex justify-between items-center p-5 border-b">
            <h3 class="text-lg font-medium text-gray-700">Kullanıcı Sil</h3>
            <button type="button" class="text-gray-400 hover:text-gray-500" onclick="closeDeleteUserModal()">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div class="p-6">
            <input type="hidden" id="deleteUserId">
            <div class="flex items-center mb-4 text-red-600">
                <i class="fas fa-exclamation-triangle text-xl mr-3"></i>
                <p class="font-medium">
                    <span id="deleteUserName" class="font-bold"></span> adlı kullanıcıyı silmek istediğinize emin misiniz?
                </p>
            </div>
            <p class="text-gray-500 text-sm mb-6">Bu işlem geri alınamaz ve kullanıcıya ait tüm veriler silinecektir.</p>
            <div class="flex justify-end">
                <button type="button" class="px-4 py-2 bg-gray-200 text-gray-800 rounded-md mr-2 hover:bg-gray-300 transition-colors shadow-sm" onclick="closeDeleteUserModal()">
                    İptal
                </button>
                <button type="button" class="px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 transition-colors shadow-sm" onclick="deleteUser()">
                    Sil
                </button>
            </div>
        </div>
    </div>
</div>

<!-- New User Modal -->
<div id="newUserModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden flex items-center justify-center backdrop-blur-sm">
    <div class="bg-white rounded-lg shadow-xl w-full max-w-md mx-4 transform transition-all">
        <div class="flex justify-between items-center p-5 border-b">
            <h3 class="text-lg font-medium text-gray-700">Yeni Kullanıcı Ekle</h3>
            <button type="button" class="text-gray-400 hover:text-gray-500" onclick="closeNewUserModal()">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <form id="newUserForm" class="p-6 space-y-4">
            <div>
                <label for="newFullName" class="block text-sm font-medium text-gray-700 mb-1">
                    Tam Ad
                </label>
                <input type="text" id="newFullName" name="fullName" class="w-full p-2.5 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-300 focus:border-indigo-500 outline-none transition-all">
            </div>
            
            <div>
                <label for="newEmail" class="block text-sm font-medium text-gray-700 mb-1">
                    E-posta
                </label>
                <input type="email" id="newEmail" name="email" class="w-full p-2.5 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-300 focus:border-indigo-500 outline-none transition-all">
            </div>
            
            <div>
                <label for="newPassword" class="block text-sm font-medium text-gray-700 mb-1">
                    Şifre
                </label>
                <input type="password" id="newPassword" name="password" class="w-full p-2.5 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-300 focus:border-indigo-500 outline-none transition-all">
            </div>
            
            <div>
                <label for="newRoleId" class="block text-sm font-medium text-gray-700 mb-1">
                    Rol
                </label>
                <select id="newRoleId" name="roleId" class="w-full p-2.5 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-300 focus:border-indigo-500 outline-none transition-all">
                    @foreach (var role in ViewBag.Roles)
                    {
                        <option value="@role.Id">@role.Name</option>
                    }
                </select>
            </div>
            
            <div class="flex justify-end pt-4">
                <button type="button" class="px-4 py-2 bg-gray-200 text-gray-800 rounded-md mr-2 hover:bg-gray-300 transition-colors shadow-sm" onclick="closeNewUserModal()">
                    İptal
                </button>
                <button type="submit" class="px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 transition-colors shadow-sm">
                    Kaydet
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/admin/users.js" asp-append-version="true"></script>
} 