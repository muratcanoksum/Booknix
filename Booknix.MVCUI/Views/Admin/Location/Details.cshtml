@model Booknix.Domain.Entities.Location

@{
    ViewData["Title"] = "Lokasyon Detay";
}

<!-- Geri Dön Linki -->
<a asp-controller="Admin" asp-action="Location"
   class="inline-flex items-center text-sm text-gray-600 hover:text-indigo-600 transition mb-4">
    <i class="fas fa-arrow-left mr-2"></i>
    Geri Dön
</a>

<!-- Sayfa Başlığı -->
<h2 class="text-2xl font-bold text-gray-800 mb-6 flex items-center">
    <i class="fas fa-map-marker-alt text-red-500 mr-2"></i>
    Lokasyon Bilgileri
</h2>

<!-- Lokasyon Bilgileri Kartı -->
<div class="bg-white shadow rounded-xl p-6 space-y-4 text-sm">
    <div>
        <strong class="text-gray-600 block">Adı:</strong>
        <span class="text-gray-800">@Model.Name</span>
    </div>

    <div>
        <strong class="text-gray-600 block">Adres:</strong>
        <span class="text-gray-800">@Model.Address</span>
    </div>

    <div>
        <strong class="text-gray-600 block">Telefon:</strong>
        <span class="text-gray-800">@Model.PhoneNumber</span>
    </div>

    <div>
        <strong class="text-gray-600 block">Sektör:</strong>
        <span class="text-gray-800">@Model.Sector?.Name</span>
    </div>
</div>

<!-- İşlem Modülleri Başlangıcı -->
<div class="mt-8">
    <h3 class="text-lg font-semibold text-gray-700 mb-4 flex items-center">
        <i class="fas fa-tools text-gray-600 mr-2"></i>
        Lokasyona Ait İşlemler
    </h3>

    <!-- İşlem Butonları -->
    <div class="flex flex-wrap gap-2 mb-6">
        <button data-url="/Admin/Location/GetServicesByLocation/@Model.Id"
                class="operation-tab px-4 py-2 bg-gray-100 hover:bg-indigo-100 text-gray-800 rounded transition text-sm">
            Servisleri Göster
        </button>
        <button data-url="/Admin/Location/GetWorkersByLocation/@Model.Id"
                class="operation-tab px-4 py-2 bg-gray-100 hover:bg-indigo-100 text-gray-800 rounded transition text-sm">
            Çalışanları Göster
        </button>
        <button data-url="/Admin/Location/GetWorkingHoursByLocation/@Model.Id"
                class="operation-tab px-4 py-2 bg-gray-100 hover:bg-indigo-100 text-gray-800 rounded transition text-sm">
            Çalışma Saatleri
        </button>
    </div>

    <!-- Görsel Ayraç -->
    <div class="flex items-center mb-6">
        <div class="flex-grow border-t border-gray-300"></div>
        <span class="mx-4 text-gray-400 text-sm uppercase">İşlem Modülleri</span>
        <div class="flex-grow border-t border-gray-300"></div>
    </div>

    <!-- Responsive Panel Alanı -->
    <div class="space-y-6">
        <div id="location-operation-loader" class="text-sm text-gray-500">
            Lütfen bir işlem seçin...
        </div>

        <div id="location-operation-panel" class="w-full">
            <!-- AJAX ile içerik burada yüklenecek -->
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/admin/location/details.js" asp-append-version="true"></script>
}
