<div id="calendar-section" class="hidden bg-white shadow rounded-xl p-6 w-full space-y-6">
    <div class="flex flex-col gap-6 lg:grid lg:grid-cols-3">

        <!-- Sol Panel: Takvim -->
        <div id="calendar-panel" class="col-span-1">
            <div class="flex items-center justify-between mb-4">
                <button id="calendar-prev" class="text-gray-600 hover:text-indigo-600 text-2xl">
                    <i class="fa-solid fa-chevron-left"></i>
                </button>

                <div class="text-center space-y-1">
                    <div id="calendar-current" class="text-lg font-semibold text-gray-800"></div>
                    <div class="flex justify-center">
                        <button id="calendar-today" class="px-3 py-1 bg-indigo-100 hover:bg-indigo-500 text-indigo-700 hover:text-white text-sm rounded-md transition">
                            Bugün
                        </button>
                    </div>
                </div>

                <button id="calendar-next" class="text-gray-600 hover:text-indigo-600 text-2xl">
                    <i class="fa-solid fa-chevron-right"></i>
                </button>
            </div>

            <div class="grid grid-cols-7 text-center text-gray-600 font-semibold mb-2 text-xs uppercase">
                <div>Pzt</div><div>Sal</div><div>Çar</div><div>Per</div><div>Cum</div><div>Cmt</div><div>Paz</div>
            </div>

            <div id="calendar-grid" class="grid grid-cols-7 gap-1">
                <!-- Günler buraya dinamik çizilecek -->
            </div>
        </div>

        <!-- Sağ Panel: Günlük Form -->
        <div id="day-form-section" class="col-span-2 hidden">
            @await Html.PartialAsync("Location/LocationModules/WorkerHour/_DayFormPartial")
        </div>

    </div>

    <!-- Buraya legendı düzgün şekilde koyuyoruz -->
    <div class="flex flex-wrap justify-center gap-8 text-sm text-gray-700 pt-6">
        <div class="flex items-center gap-2">
            <div class="w-4 h-4 bg-green-500 rounded-full"></div>
            <span>Çalışıyor</span>
        </div>
        <div class="flex items-center gap-2">
            <div class="w-4 h-4 bg-orange-400 rounded-full"></div>
            <span>İzinli</span>
        </div>
        <div class="flex items-center gap-2">
            <div class="w-4 h-4 bg-red-500 rounded-full"></div>
            <span>Çalışmıyor</span>
        </div>
        <div class="flex items-center gap-2">
            <div class="w-4 h-4 bg-gray-300 rounded-full"></div>
            <span>Veri Yok</span>
        </div>
    </div>

</div>

<script src="~/js/admin/location/workerhour/calendar.js" asp-append-version="true"></script>
