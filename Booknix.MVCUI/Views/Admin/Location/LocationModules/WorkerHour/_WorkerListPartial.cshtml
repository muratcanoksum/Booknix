@model List<Booknix.Domain.Entities.Worker>

@{
    var sortedWorkers = Model.OrderBy(x => x.User.FullName).ToList();
}

<div class="bg-white shadow rounded-xl p-6 w-full">
    <div class="flex items-center justify-between mb-6">
        <h3 class="text-lg font-semibold text-gray-800 flex items-center">
            <i class="fa-solid fa-user-group text-indigo-600 mr-2"></i> Çalışan Seçimi
        </h3>

        <div class="relative w-64">
            <input type="text" id="worker-search" placeholder="Çalışan ara..."
                   class="w-full border rounded-md px-3 py-2 text-sm focus:ring-indigo-500 focus:border-indigo-500" />
            <i class="fa-solid fa-magnifying-glass absolute right-3 top-3 text-gray-400"></i>
        </div>
    </div>

    <div id="worker-list-wrapper" class="max-h-[180px] overflow-y-auto pr-2">
        <div id="worker-list" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
            @foreach (var worker in sortedWorkers)
            {
                <div class="worker-item p-4 border rounded-lg hover:bg-indigo-50 transition cursor-pointer"
                     data-id="@worker.Id"
                     data-name="@worker.User.FullName">
                    <div class="font-semibold text-gray-800">@worker.User.FullName</div>
                    <div class="text-sm text-gray-500 truncate">@worker.User.Email</div>
                </div>
            }
        </div>
    </div>
</div>

<script src="~/js/admin/location/workerhour/workerlist.js" asp-append-version="true"></script>
