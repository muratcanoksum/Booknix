@model List<Booknix.Domain.Entities.Worker>

@{
    var sortedWorkers = Model.OrderBy(x => x.User.FullName).ToList();
}

<div class="bg-white shadow-xl rounded-xl p-4">
    <h3 class="text-lg font-semibold text-gray-800 mb-4">
        <i class="fa-solid fa-user-group text-indigo-600 mr-2"></i> Çalışan Seçimi
    </h3>

    <div id="worker-list-wrapper" class="overflow-x-auto">
        <div id="worker-list" class="flex gap-4 min-w-full">
            @foreach (var worker in sortedWorkers)
            {
                <div class="worker-item flex-shrink-0 w-60 p-4 border rounded-lg hover:bg-indigo-50 transition cursor-pointer"
                     data-id="@worker.Id"
                     data-name="@worker.User.FullName">
                    <div class="font-semibold text-gray-800">@worker.User.FullName</div>
                    <div class="text-sm text-gray-500">@worker.User.Email</div>
                </div>
            }
        </div>
    </div>
</div>

<script src="~/js/admin/location/workerhour/workerlist.js" asp-append-version="true"></script>
