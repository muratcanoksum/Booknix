@using Booknix.Shared.Helpers
@model Booknix.Application.ViewModels.ServiceCreateViewModel

@Html.AntiForgeryToken()
<input type="hidden" id="location-id" value="@Model.LocationId" />

<div class="flex justify-between items-center mb-4">
    <h3 class="text-lg font-semibold text-gray-800">
        <i class="fa-solid fa-list text-indigo-600 mr-2"></i> Kayıtlı Servisler
    </h3>
    <button id="show-add-service-modal"
            class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded text-sm inline-flex items-center gap-2">
        <i class="fa-solid fa-plus"></i> Servis Ekle
    </button>
</div>

<!-- Servis Listesi -->
<div id="service-list-container" class="my-10">
    <div class="bg-white shadow-xl rounded-xl overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200 text-base">
            <thead class="bg-gray-200">
                <tr>
                    <th class="px-6 py-3 text-left text-gray-700 font-semibold">Adı</th>
                    <th class="px-6 py-3 text-left text-gray-700 font-semibold">Açıklama</th>
                    <th class="px-6 py-3 text-left text-gray-700 font-semibold">Fiyat</th>
                    <th class="px-6 py-3 text-left text-gray-700 font-semibold">Süre</th>
                    <th class="px-6 py-3 text-center text-gray-700 font-semibold">İşlemler</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
                @if (Model.ServiceList != null && Model.ServiceList.Any())
                {
                    foreach (var service in Model.ServiceList)
                    {
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-3 text-gray-900 font-medium">@service.Name</td>
                            <td class="px-6 py-3 text-gray-800">@service.Description</td>
                            <td class="px-6 py-3 text-gray-800">@($"{service.Price:C2}")</td>
                            <td class="px-6 py-3 text-gray-800">@service.Duration.ToString(@"hh\:mm")</td>
                            <td class="px-6 py-3 text-center space-x-2">
                                <button type="button" onclick="toggleWorkers('@service.Id')"
                                        class="text-indigo-600 hover:text-indigo-800">
                                    <i class="fa-solid fa-users"></i>
                                </button>
                                <button type="button" class="text-green-600 hover:text-green-800 edit-service">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </button>
                                <button type="button" class="text-red-600 hover:text-red-800 delete-service">
                                    <i class="fa-solid fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                        <tr id="workers-@service.Id" class="hidden bg-gray-50">
                            <td colspan="5" class="px-6 py-4 bg-indigo-50">
                                @if (service.ServiceEmployees != null && service.ServiceEmployees.Any())
                                {
                                    <div class="space-y-2">
                                        @foreach (var se in service.ServiceEmployees)
                                        {
                                            <div class="flex justify-between items-center">
                                                <span class="text-gray-700">@se.Worker?.User?.FullName</span>
                                                <button data-worker-id="@se.WorkerId" data-service-id="@service.Id" class="remove-worker text-red-500 hover:text-red-700">
                                                    <i class="fa-solid fa-user-minus"></i>
                                                </button>
                                            </div>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <div class="text-gray-500 italic">Atanmış çalışan yok.</div>
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="px-6 py-4 text-center text-gray-500">Bu lokasyona ait servis bulunmamaktadır.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

<!-- Modal -->
<div id="add-service-modal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
    <div class="bg-white rounded-lg shadow-lg w-full max-w-md p-6 text-center">
        <h2 class="text-lg font-semibold text-gray-800 mb-4">Yeni Servis Ekle</h2>

        <form id="service-add-form" class="space-y-4">
            <input type="hidden" name="LocationId" value="@Model.LocationId" />

            <div class="text-left">
                <label class="block text-sm text-gray-600 mb-1">Adı</label>
                <input type="text" name="Name" class="w-full border rounded px-3 py-2" required />
            </div>

            <div class="text-left">
                <label class="block text-sm text-gray-600 mb-1">Çıklama</label>
                <input type="text" name="Description" class="w-full border rounded px-3 py-2" />
            </div>

            <div class="text-left">
                <label class="block text-sm text-gray-600 mb-1">Fiyat</label>
                <input type="number" name="Price" step="0.01" class="w-full border rounded px-3 py-2" required />
            </div>

            <div class="text-left">
                <label class="block text-sm text-gray-600 mb-1">Süre</label>
                <div class="flex gap-2">
                    <select id="hour" class="w-1/2 border rounded px-3 py-2">
                        @for (int h = 0; h <= 10; h++)
                        {
                            <option value="@h">@h saat</option>
                        }
                    </select>
                    <select id="minute" class="w-1/2 border rounded px-3 py-2">
                        @for (int m = 0; m < 60; m += 5)
                        {
                            <option value="@m">@m dakika</option>
                        }
                    </select>
                </div>
                <input type="hidden" name="Duration" id="duration-input" required />
            </div>

            <div class="text-left">
                <label class="block text-sm text-gray-600 mb-1">Servis Çalışanları</label>
                <div class="space-y-2 max-h-48 overflow-y-auto border rounded p-2">
                    @if (Model.AvailableWorkers != null && Model.AvailableWorkers.Any())
                    {
                        foreach (var worker in Model.AvailableWorkers)
                        {
                            <div class="flex items-center gap-2">
                                <input type="checkbox" name="SelectedWorkerIds" value="@worker.Id" class="text-indigo-600" />
                                <label class="text-sm text-gray-800">@worker.User.FullName (@EnumHelper.GetDisplayName(worker.RoleInLocation))</label>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-sm text-gray-500">Bu lokasyona ait çalışan bulunmamaktadır.</div>
                    }
                </div>
            </div>

            <div class="flex justify-center gap-3 mt-4">
                <button type="button" onclick="hideAddServiceModal()"
                        class="px-4 py-2 bg-gray-100 text-gray-700 hover:bg-gray-200 rounded">
                    Vazgeç
                </button>
                <button type="submit"
                        class="px-4 py-2 bg-blue-600 text-white hover:bg-blue-700 rounded">
                    Kaydet
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    function showAddServiceModal() {
        $("#add-service-modal").removeClass("hidden").addClass("flex");
    }

    function hideAddServiceModal() {
        $("#add-service-modal").addClass("hidden").removeClass("flex");
    }

    function toggleWorkers(serviceId) {
        const row = document.getElementById("workers-" + serviceId);
        row.classList.toggle("hidden");
    }

    $(document).off("click", "#show-add-service-modal").on("click", "#show-add-service-modal", showAddServiceModal);

    $(document).off("submit", "#service-add-form").on("submit", "#service-add-form", function (e) {
        e.preventDefault();

        const hour = $("#hour").val().toString().padStart(2, '0');
        const minute = $("#minute").val().toString().padStart(2, '0');
        $("#duration-input").val(`${hour}:${minute}`);

        const $form = $(this);
        const $btn = $form.find("button[type='submit']");
        const token = $('input[name="__RequestVerificationToken"]').val();
        const locationId = $("#location-id").val();

        $btn.prop("disabled", true).html('<i class="fa fa-spinner fa-spin"></i> Kaydediliyor...');

        $.ajax({
            type: "POST",
            url: "/Admin/Location/Service/Add",
            data: $form.serialize(),
            headers: {
                "RequestVerificationToken": token
            },
            success: function () {
                $form[0].reset();
                hideAddServiceModal();
                loadServices(locationId);
            },
            error: function (xhr) {
                alert(xhr.responseText || "Servis eklenemedi.");
            },
            complete: function () {
                $btn.prop("disabled", false).html('Kaydet');
            }
        });
    });

    $(document)
        .off("click", ".edit-service").on("click", ".edit-service", function () {
            // Düzenleme işlemi buraya eklenecek
        });

    $(document)
        .off("click", ".delete-service").on("click", ".delete-service", function () {
            // Silme işlemi buraya eklenecek
        });

    $(document)
        .off("click", ".remove-worker").on("click", ".remove-worker", function () {
            // Tekil çalışan silme işlemi buraya eklenecek
        });

    function loadServices(locationId) {
        const $target = $("#location-operation-panel");
        $target.html(`
            <div class="text-sm text-gray-500 flex items-center gap-2">
                <i class="fa-solid fa-spinner fa-spin text-indigo-600"></i> Yükleniyor...
            </div>
        `);

        $.get(`/Admin/Location/GetServicesByLocation/${locationId}`, function (html) {
            $target.html(html);
        }).fail(function () {
            $target.html(`
                <div class="text-sm text-red-600 mt-2">
                    <i class="fa-solid fa-circle-exclamation mr-1"></i>
                    Servis bilgileri yüklenemedi.
                </div>
            `);
        });
    }
</script>
