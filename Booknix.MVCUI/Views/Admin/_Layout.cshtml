<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Booknix Admin</title>
    <script src="https://unpkg.com/lucide@latest"></script>
    <script>lucide.createIcons();</script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <!-- Tailwind CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['Poppins', 'sans-serif']
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gray-100 text-gray-800">

    <div class="min-h-screen flex">
        <!-- Sidebar -->
        <aside class="w-64 bg-white border-r shadow-md hidden md:flex flex-col">
            <div class="px-6 py-4 border-b">
                <h1 class="text-2xl font-bold text-indigo-600">Booknix Admin</h1>
            </div>
            <nav class="flex-1 px-4 py-6 space-y-2 text-sm">
                <a href="#" onclick="loadContent('/Admin/Sectors')" class="flex items-center gap-3 px-4 py-2 rounded-md border border-gray-200 bg-white hover:bg-indigo-50 hover:border-indigo-400 hover:text-indigo-600 transition shadow-sm">
                    <i data-lucide="briefcase" class="w-5 h-5"></i>
                    <span>Sektör Yönetimi</span>
                </a>
                <!-- Diğer menüler de aynı mantıkla -->
            </nav>
            <div class="border-t p-4 text-xs text-gray-400">
                &copy; 2025 Booknix
            </div>
        </aside>

        <!-- Dinamik içerik -->
        <main class="flex-1 p-6" id="admin-content">
            @RenderBody()
        </main>
    </div>

    <script>async function loadContent(url) {
        const { data } = await axios.get(url);
        document.getElementById('admin-content').innerHTML = data;
        lucide.createIcons(); // ikonları yeniden render et
    }</script>

</body>
</html>
