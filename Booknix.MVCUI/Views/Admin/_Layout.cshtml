@{
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Booknix Admin</title>

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <!-- Site CSS -->
    <link href="~/css/site.css" rel="stylesheet" />

    <!-- Axios -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</head>
<body class="bg-gray-100 text-gray-800">

    <div class="min-h-screen flex flex-col md:flex-row">
        <!-- Sidebar -->
        <aside class="w-full md:w-64 bg-white border-r shadow-md">
            <div class="px-6 py-4 border-b">
                <h1 class="text-2xl font-bold text-indigo-600">Booknix Admin</h1>
            </div>
            <nav class="flex flex-col px-4 py-6 space-y-2 text-sm">
                <a asp-controller="Admin" asp-action="Sector"
                   class="flex items-center gap-3 px-4 py-2 rounded-md border border-gray-200 bg-white hover:bg-indigo-50 hover:border-indigo-400 hover:text-indigo-600 transition shadow-sm">
                    <i class="fa-solid fa-briefcase w-5 h-5"></i>
                    <span>Sektör Yönetimi</span>
                </a>

                <a asp-controller="Admin" asp-action="Location"
                   class="flex items-center gap-3 px-4 py-2 rounded-md border border-gray-200 bg-white hover:bg-indigo-50 hover:border-indigo-400 hover:text-indigo-600 transition shadow-sm">
                    <i class="fa-solid fa-location-dot w-5 h-5"></i>
                    <span>Lokasyon / İşyerleri</span>
                </a>
            </nav>
            <div class="border-t p-4 text-xs text-gray-400">
                &copy; 2025 Booknix
            </div>
        </aside>

        <!-- Ana içerik -->
        <main class="flex-1 p-6" id="admin-content">
            @RenderBody()
        </main>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/cleave.js@1/dist/cleave.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        async function loadContent(url) {
            const { data } = await axios.get(url);
            document.getElementById('admin-content').innerHTML = data;
        }
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
