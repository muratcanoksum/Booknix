@{
    Layout = null;
    var code = ViewData["Title"] ?? "Hata";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(ViewBag.Error ?? "Bir sorun oluştu")</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['Inter', 'sans-serif']
                    },
                    colors: {
                        primary: "#3B82F6", // Tailwind blue-500
                        error: "#EF4444"    // Tailwind red-500
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gray-50 font-sans flex items-center justify-center min-h-screen px-4">
    <div class="bg-white shadow-xl rounded-2xl p-8 max-w-md w-full text-center space-y-6 border border-gray-100">
        <img src="/images/logo.png" alt="Hata İllüstrasyonu" class="w-28 h-28 mx-auto" />

        <div class="space-y-2">
            <h1 class="text-2xl font-bold text-error">Üzgünüz, bir sorun oluştu</h1>
            <p class="text-sm text-gray-600 leading-relaxed">
                @(ViewBag.Error ?? "Beklenmeyen bir hata oluştu. Lütfen tekrar deneyin.")
            </p>
        </div>

        <a href="/" class="inline-block mt-4 bg-primary hover:bg-blue-700 text-white font-medium text-sm px-5 py-2.5 rounded-lg transition duration-200">
            Ana Sayfaya Dön
        </a>
    </div>
</body>
</html>
