@{
    Layout = null;
    var code = ViewData["Title"] ?? "Hata";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@code</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="flex items-center justify-center min-h-screen bg-gray-50">
    <div class="text-center space-y-4">
        <img src="/images/logo.png" alt="Booknix Logo" class="w-24 h-24 mx-auto" />
        <h1 class="text-3xl font-bold text-red-600">@code</h1>
        <p class="text-gray-600">Beklenmeyen bir hata oluştu. Lütfen tekrar deneyin.</p>
        <a href="/" class="inline-block mt-4 bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded">
            Ana Sayfa
        </a>
    </div>
</body>
</html>
