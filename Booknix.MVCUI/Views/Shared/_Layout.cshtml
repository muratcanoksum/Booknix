@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Booknix</title>
                                    

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />

</head>

<body class="bg-gray-50 text-gray-800 font-sans">

    <!-- HEADER -->
    <header class="border-b shadow-sm sticky top-0 z-50 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16 items-center">
                <!-- Logo -->
                <a asp-controller="Home" asp-action="Index" class="flex items-center space-x-2">
                    <img src="~/images/logo_l.png" alt="Booknix Logo" class="h-12 w-auto" />
                </a>

                <!-- Hamburger Menu Button (Mobile) -->
                <button class="md:hidden text-gray-600 hover:text-blue-600 text-xl focus:outline-none"
                        onclick="toggleMobileMenu()">
                    <i class="fas fa-bars"></i>
                </button>

                <!-- Main Navigation (Desktop) -->
                <nav class="hidden md:flex space-x-6 items-center">
                    <a asp-controller="Home" asp-action="Index"
                       class="text-gray-700 hover:underline hover:text-blue-600 transition font-medium">Ana Sayfa</a>
                    <a asp-controller="Home" asp-action="Privacy"
                       class="text-gray-700 hover:underline hover:text-blue-600 transition font-medium">Gizlilik</a>
                </nav>

                <!-- Auth Partial (Desktop) -->
                <div class="hidden md:block">
                    @await Html.PartialAsync("_LoginPartial")
                </div>
            </div>

            <!-- Mobile Navigation (Hidden by default) -->
            <div id="mobileMenu" class="md:hidden hidden flex-col mt-2 space-y-2 pb-4 border-t pt-4">
                <a asp-controller="Home" asp-action="Index"
                   class="block text-gray-700 hover:text-blue-600 font-medium">Ana Sayfa</a>
                <a asp-controller="Home" asp-action="Privacy"
                   class="block text-gray-700 hover:text-blue-600 font-medium">Gizlilik</a>
                @await Html.PartialAsync("_LoginPartial")
            </div>
        </div>
    </header>

    <!-- MAIN CONTENT -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="bg-white border-t text-sm text-gray-500">
        <div class="max-w-7xl mx-auto px-4 py-4 flex justify-between">
            <span>&copy; 2025 - Booknix</span>
            <a asp-controller="Home" asp-action="Privacy" class="hover:underline">Gizlilik</a>
        </div>
    </footer>

    <!-- Optional Section Scripts -->

    <script src="https://cdn.jsdelivr.net/npm/cleave.js@1/dist/cleave.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
