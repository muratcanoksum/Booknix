@inject IHttpContextAccessor HttpContextAccessor

@{
    var session = HttpContextAccessor.HttpContext?.Session;
    var fullName = session?.GetString("FullName");
    var firstName = fullName?.Split(" ").FirstOrDefault();
}

<ul class="flex items-center space-x-3">
    @if (!string.IsNullOrEmpty(firstName))
    {
        <li class="text-gray-700 font-medium hidden sm:block">
            Merhaba, @firstName
        </li>
        <li>
            <a asp-controller="Account" asp-action="Manage"
               class="px-4 py-1.5 border border-indigo-500 text-indigo-500 text-sm rounded hover:bg-indigo-500 hover:text-white transition">
                Hesabım
            </a>
        </li>
        <li>
            <a asp-controller="Auth" asp-action="Logout"
               class="px-4 py-1.5 bg-red-500 text-white text-sm rounded hover:bg-red-600 transition">
                Çıkış Yap
            </a>
        </li>
    }
    else
    {
        <li>
            <a asp-controller="Auth" asp-action="Login"
               class="px-4 py-1.5 border border-blue-500 text-blue-500 text-sm rounded hover:bg-blue-500 hover:text-white transition">
                Giriş Yap
            </a>
        </li>
        <li>
            <a asp-controller="Auth" asp-action="Register"
               class="px-4 py-1.5 border border-green-500 text-green-500 text-sm rounded hover:bg-green-500 hover:text-white transition">
                Kayıt Ol
            </a>
        </li>
    }
</ul>
