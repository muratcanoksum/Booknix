@model List<Booknix.Application.DTOs.AppointmentDto>
@{
    ViewData["Title"] = "Çalışan Paneli";
    var worker = ViewBag.Worker as Booknix.Domain.Entities.Worker;
}

@if (TempData["SuccessMessage"] != null)
{
    <div id="success-message" class="p-4 mb-4 text-sm text-green-800 rounded-lg bg-green-100 border border-green-300 flex items-center gap-3" role="alert">
        <i class="fas fa-check-circle text-green-600 text-lg"></i>
        <span>@TempData["SuccessMessage"]</span>
    </div>
}

<h2 class="text-2xl font-bold text-gray-800 mb-4">
    <i class="fas fa-user-tie text-teal-500 mr-2"></i>Çalışan Paneli
</h2>

<div class="bg-white shadow rounded-lg p-6 space-y-4 text-sm">
    <div>
        <strong class="text-gray-600 block">Adı:</strong>
        <span class="text-gray-800">@worker?.User?.FullName</span>
    </div>

    <div>
        <strong class="text-gray-600 block">Lokasyon:</strong>
        <span class="text-gray-800">@worker?.Location?.Name</span>
    </div>

    <div>
        <strong class="text-gray-600 block">Telefon:</strong>
        <span class="text-gray-800">@worker?.Location?.PhoneNumber</span>
    </div>

    <div>
        <strong class="text-gray-600 block">Pozisyon:</strong>
        <span class="text-gray-800">@Booknix.Shared.Helpers.EnumHelper.GetDisplayName(worker?.RoleInLocation ?? Booknix.Domain.Entities.Enums.LocationRole.LocationEmployee)</span>
    </div>
</div>

<div class="mt-6">
    <h3 class="text-lg font-semibold text-gray-700 mb-4">Randevularım</h3>

    @if (Model != null && Model.Any())
    {
        <div class="bg-white shadow rounded-lg overflow-hidden">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Tarih
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Saat
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Müşteri
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Servis
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Durum
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            İşlemler
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var appointment in Model)
                    {
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                @appointment.AppointmentDate.ToString("dd.MM.yyyy")
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                @appointment.StartTime - @appointment.EndTime
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                @appointment.UserName
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                @appointment.ServiceName
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm">
                                @{
                                    var statusClass = appointment.Status switch
                                    {
                                        "Pending" => "bg-yellow-100 text-yellow-800",
                                        "Approved" => "bg-green-100 text-green-800",
                                        "Completed" => "bg-blue-100 text-blue-800",
                                        "Cancelled" => "bg-red-100 text-red-800",
                                        "NoShow" => "bg-gray-100 text-gray-800",
                                        _ => "bg-gray-100 text-gray-800"
                                    };

                                    var statusText = appointment.Status switch
                                    {
                                        "Pending" => "Bekliyor",
                                        "Approved" => "Onaylandı",
                                        "Completed" => "Tamamlandı",
                                        "Cancelled" => "İptal Edildi",
                                        "NoShow" => "Gelmedi",
                                        _ => appointment.Status
                                    };
                                }
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @statusClass">
                                    @statusText
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                <div class="flex space-x-2">
                                    @if (appointment.Status == "Pending")
                                    {
                                        <button data-id="@appointment.Id" data-status="Approved" class="update-appointment-status bg-green-100 hover:bg-green-200 text-green-800 px-2 py-1 rounded text-xs">
                                            <i class="fas fa-check mr-1"></i> Onayla
                                        </button>
                                        <button data-id="@appointment.Id" data-status="Cancelled" class="update-appointment-status bg-red-100 hover:bg-red-200 text-red-800 px-2 py-1 rounded text-xs">
                                            <i class="fas fa-times mr-1"></i> İptal
                                        </button>
                                    }
                                    @if (appointment.Status == "Approved")
                                    {
                                        <button data-id="@appointment.Id" data-status="Completed" class="update-appointment-status bg-blue-100 hover:bg-blue-200 text-blue-800 px-2 py-1 rounded text-xs">
                                            <i class="fas fa-check-double mr-1"></i> Tamamla
                                        </button>
                                        <button data-id="@appointment.Id" data-status="NoShow" class="update-appointment-status bg-gray-100 hover:bg-gray-200 text-gray-800 px-2 py-1 rounded text-xs">
                                            <i class="fas fa-user-slash mr-1"></i> Gelmedi
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center py-8 bg-gray-50 rounded-lg border border-gray-200">
            <i class="far fa-calendar-times text-4xl text-gray-400 mb-3"></i>
            <p class="text-gray-500">Henüz hiç randevunuz bulunmuyor.</p>
        </div>
    }
</div>

<!-- Durum Değiştirme Onay Modalı -->
<div id="confirm-status-modal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
    <div class="bg-white rounded-lg shadow-lg p-6 w-full max-w-md text-center">
        <h2 class="text-lg font-semibold text-gray-800 mb-4">Randevu Durumu Güncelleme</h2>
        <p class="text-sm text-gray-600 mb-6">Bu randevuyu <span id="status-action-text" class="font-semibold"></span> istediğinize emin misiniz?</p>
        <div class="flex justify-center gap-4">
            <button id="confirm-status-yes" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded">Evet</button>
            <button id="confirm-status-no" class="bg-gray-200 hover:bg-gray-300 text-gray-800 px-4 py-2 rounded">İptal</button>
        </div>
    </div>
</div>

<!-- CSRF token -->
@Html.AntiForgeryToken()

@section Scripts {
    <script src="~/js/worker/worker.js" asp-append-version="true"></script>
} 