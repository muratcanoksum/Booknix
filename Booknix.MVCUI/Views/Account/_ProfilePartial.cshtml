@model Booknix.Application.DTOs.ProfileViewModel

<h3 class="text-lg font-semibold mb-4">Profil Bilgileri</h3>

<form id="profile-form">

    @Html.AntiForgeryToken()

    <div id="profile-alert" class="hidden text-sm mb-3 rounded px-3 py-2"></div>

    <div class="mb-4">
        <label asp-for="PhoneNumber" class="block text-sm text-gray-600 mb-1">Telefon Numarası</label>
        <input asp-for="PhoneNumber" class="w-full border px-3 py-2 rounded text-sm" />
    </div>

    <div class="mb-4">
        <label asp-for="BirthDate" class="block text-sm text-gray-600 mb-1">Doğum Tarihi</label>
        <input asp-for="BirthDate" type="date" class="w-full border px-3 py-2 rounded text-sm" />
    </div>

    <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded text-sm">
        Güncelle
    </button>
</form>
