@model string

<h3 class="text-lg font-semibold mb-4">Email Adresinizi Değiştirin</h3>

<form id="change-email-form">
    @Html.AntiForgeryToken()

    <div id="change-email-alert" class="hidden text-sm mb-3 rounded px-3 py-2"></div>

    <!-- Eski Mail -->
    <div class="mb-4">
        <label class="block text-sm text-gray-600 mb-1">Mevcut Email</label>
        <div class="flex items-center border rounded">
            <span class="px-3 text-gray-500 border-r">
                <i class="fas fa-envelope"></i>
            </span>
            <input type="email" name="oldEmail" class="w-full border px-3 py-2 rounded text-sm" disabled value="@Model"/>
        </div>
    </div>

    <!-- Yeni Mail -->
    <div class="mb-4">
        <label class="block text-sm text-gray-600 mb-1">Yeni Email</label>
        <div class="flex items-center border rounded">
            <span class="px-3 text-gray-500 border-r">
                <i class="fas fa-envelope"></i>
            </span>
            <input type="email" name="newEmail" class="w-full border px-3 py-2 rounded text-sm" required />
        </div>
    </div>

    <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded text-sm">
        Email Güncelle
    </button>
</form>
