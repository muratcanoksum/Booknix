@model Booknix.Application.DTOs.ProfileViewModel

<h3 class="text-lg font-semibold mb-4">Şifrenizi Değiştirin</h3>

<form id="reset-password-form">
    @Html.AntiForgeryToken()

    <div id="reset-password-alert" class="hidden text-sm mb-3 rounded px-3 py-2"></div>

    <!-- Eski Şifre -->
    <div class="mb-4">
        <label class="block text-sm text-gray-600 mb-1">Eski Şifre</label>
        <input type="password" name="oldPassword" class="w-full border px-3 py-2 rounded text-sm" required />
    </div>

    <!-- Yeni Şifre -->
    <div class="mb-4">
        <label class="block text-sm text-gray-600 mb-1">Yeni Şifre</label>
        <input type="password" name="newPassword" class="w-full border px-3 py-2 rounded text-sm" required />
    </div>

    <!-- Yeni Şifre Tekrar -->
    <div class="mb-4">
        <label class="block text-sm text-gray-600 mb-1">Yeni Şifreyi Tekrarla</label>
        <input type="password" name="confirmPassword" class="w-full border px-3 py-2 rounded text-sm" required />
    </div>

    <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded text-sm">
        Şifreyi Güncelle
    </button>
</form>
