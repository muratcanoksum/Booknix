@{
    ViewData["Title"] = "Hesabım";
}

<div class="max-w-6xl mb-[150px] mx-auto mt-20 bg-white shadow rounded-lg p-5">
    <!-- Tab Başlıkları -->
    <div class="border-b mb-6">
        <ul class="flex">
            <li class="mr-2">
                <a href="#profile" class="tab-link inline-block py-3 px-6 border-b-2 border-transparent hover:border-blue-400 hover:text-blue-600 font-medium text-gray-700" data-tab="profile">
                    <i class="fas fa-user mr-2"></i> Profilim
                </a>
            </li>
            <li>
                <a href="#appointments" class="tab-link inline-block py-3 px-6 border-b-2 border-transparent hover:border-blue-400 hover:text-blue-600 font-medium text-gray-700" data-tab="appointments">
                    <i class="fas fa-calendar-check mr-2"></i> Randevularım
                </a>
            </li>
            <li>
                <a href="#security" class="tab-link inline-block py-3 px-6 border-b-2 border-transparent hover:border-blue-400 hover:text-blue-600 font-medium text-gray-700" data-tab="security">
                    <i class="fas fa-user-shield mr-2"></i> Güvenlik Kayıtlarım
                </a>
            </li>
        </ul>
    </div>

    <!-- Tab İçerikleri -->
    <div class="tab-content">
        <div id="account-loader" class="text-sm text-gray-500">Yükleniyor...</div>
    </div>

</div>

@section Scripts {
    <script src="~/js/account/manage.js" asp-append-version="false"></script>
}
