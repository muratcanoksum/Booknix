@using Booknix.Application.Helpers
@model Booknix.Domain.Entities.Sector

<div class="max-w-6xl mx-auto px-4 py-8">
    <h2 class="text-2xl font-bold text-gray-800 mb-2">@Model.Name</h2>
    <p class="text-gray-500 mb-6">Bu sekt√∂rdeki hizmet veren lokasyonlar:</p>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        @foreach (var loc in Model.Locations)
        {
            <a href="/lokasyon/@StringHelper.ToUrlFriendly(loc.Name)">
                <div class="bg-white shadow rounded-lg overflow-hidden">
                    <img src="@loc.MediaFiles.FirstOrDefault()?.FilePath" 
                         alt="@loc.Name" class="w-full h-32 object-cover" />
                    <div class="p-4">
                        <h3 class="text-lg font-semibold text-gray-800">@loc.Name</h3>
                        <p class="text-sm text-gray-500">@loc.Address</p>
                    </div>
                </div>
            </a>
        }
    </div>
</div>