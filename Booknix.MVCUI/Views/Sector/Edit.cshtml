@model Booknix.Application.DTOs.SectorDto

@{
        ViewData["Title"] = "Sektör Düzenle";
}

<button onclick="loadContent('/Admin/Sectors')"
        class="inline-flex items-center text-sm text-gray-600 hover:text-indigo-600 transition mb-4">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
    </svg>
    Geri Dön
</button>

<h2 class="text-xl font-semibold mb-4">✏️ Sektör Düzenle</h2>

<form asp-action="Edit" asp-route-id="@Model.Id" method="post" class="space-y-4">
    <div>
        <label asp-for="Name" class="block text-sm font-medium">Sektör Adı</label>
        <input asp-for="Name" class="w-full mt-1 px-4 py-2 border rounded" />
        <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
    </div>

    <button type="submit"
            class="px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700 transition">
        Güncelle
    </button>
</form>
