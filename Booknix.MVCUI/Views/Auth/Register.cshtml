@model Booknix.Application.DTOs.RegisterRequestDto

@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="p-[80px] flex items-center justify-center">
    <div class="w-full max-w-md bg-white shadow-lg rounded-lg p-8">
        <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">Kayıt Ol</h2>

        <div id="register-alert" class="hidden mb-4 px-4 py-2 text-sm rounded bg-red-100 text-red-700"></div>

        <form id="register-form" class="space-y-5">
            <div>
                <label asp-for="FullName" class="block text-sm font-medium text-gray-700 mb-1">Ad Soyad</label>
                <input asp-for="FullName"
                       class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 text-sm" />
            </div>

            <div>
                <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                <input asp-for="Email" type="email"
                       class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 text-sm" />
            </div>

            <div>
                <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1">Şifre</label>
                <input asp-for="Password" type="password"
                       class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 text-sm" />
            </div>

            <button type="submit"
                    class="w-full bg-green-600 hover:bg-green-700 text-white text-sm font-medium py-2 px-4 rounded transition">
                Kayıt Ol
            </button>
        </form>

        <div class="text-center mt-6 text-sm">
            <a href="/Auth/Login" class="text-green-600 hover:underline">Zaten bir hesabın var mı? Giriş yap</a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $("#register-form").submit(function (e) {
            e.preventDefault();

            $.ajax({
                type: "POST",
                url: "/Auth/Register",
                data: $(this).serialize(),
                success: function () {
                    window.location.href = "/Auth/Login";
                },
                error: function () {
                    $("#register-alert")
                        .removeClass("hidden")
                        .text("Kayıt başarısız! Email daha önce alınmış olabilir.");
                }
            });
        });
    </script>
}
