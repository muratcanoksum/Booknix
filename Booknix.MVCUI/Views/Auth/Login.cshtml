@model Booknix.Application.DTOs.LoginRequestDto

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container mt-5" style="max-width: 400px;">
    <h2 class="text-center mb-4">Giriş Yap</h2>

    <div id="login-alert" class="alert d-none" role="alert"></div>

    <form id="login-form">
        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Password" class="form-label">Şifre</label>
            <input asp-for="Password" type="password" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
    </form>
    <div class="text-center mt-3">
        <a href="/Auth/Register">Hesabın yok mu? Kayıt ol</a>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $("#login-form").submit(function (e) {
            e.preventDefault();

            $.ajax({
                type: "POST",
                url: "/Auth/Login",
                data: $(this).serialize(),
                success: function () {
                    window.location.href = "/";
                },
                error: function () {
                    $("#login-alert").removeClass("d-none").addClass("alert-danger").text("Email veya şifre hatalı!");
                }
            });
        });
    </script>
}
