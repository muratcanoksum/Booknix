@{
    ViewData["Title"] = "E-Posta Doğrulama";
    var status = ViewBag.Status as string;
}

<!DOCTYPE html>
<html lang="tr" class="h-full">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['Inter', 'sans-serif']
                    },
                    colors: {
                        success: '#22C55E',
                        error: '#EF4444',
                        primary: '#3B82F6'
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gray-50 font-sans min-h-screen">
    <div class="m-36 flex items-center justify-center px-4">
        <!-- KART -->
        <div class="bg-white shadow-xl rounded-2xl p-8 max-w-md w-full text-center space-y-6 border border-gray-100">
            <img src="/images/logo.png" alt="Booknix Logo" class="w-20 h-20 mx-auto" />

            <!-- Mesaj -->
            <div class="space-y-4">
                @if (status == "error")
                {
                    <p class="text-sm text-red-500 bg-red-100 px-4 py-2 rounded-lg">
                        @ViewBag.Message
                    </p>
                }
                else if (status == "success")
                {
                    <p class="text-sm text-green-500 bg-green-100 px-4 py-2 rounded-lg">
                        @ViewBag.Message
                    </p>
                }

                <a href="/Auth/Login"
                   class="inline-block bg-primary hover:bg-blue-700 text-white font-medium text-sm px-10 py-2.5 rounded-lg transition duration-200">
                    Giriş Yap
                </a>
            </div>
        </div>
    </div>
</body>
</html>
