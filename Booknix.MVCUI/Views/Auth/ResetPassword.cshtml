@{
    ViewData["Title"] = "Yeni Şifre Belirle";
}

<div class="max-w-md mx-auto mt-20 bg-white p-8 rounded shadow">
    <h2 class="text-xl font-semibold text-center text-gray-800 mb-6">Yeni Şifre Belirle</h2>

    <div id="reset--password-alert" class="hidden"></div>

    <form id="reset-form" class="space-y-4">
        @Html.AntiForgeryToken()
        <input type="hidden" name="Token" value="@ViewBag.Token" />

        <div>
            <label for="NewPassword" class="block text-sm font-medium text-gray-700 mb-1">Yeni Şifre</label>
            <input name="NewPassword" type="password" required
                   class="w-full border border-gray-300 rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
        </div>

        <button type="submit"
                class="w-full bg-green-600 hover:bg-green-700 text-white text-sm font-semibold py-2 px-4 rounded transition">
            Şifreyi Güncelle
        </button>
    </form>
</div>

@section Scripts {
    <script src="~/js/auth/resetPassword.js" asp-append-version="true"></script>
}
