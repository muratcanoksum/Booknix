@{
    ViewData["Title"] = "Yeni Şifre Belirle";
}

<div class="max-w-md mx-auto mt-20 bg-white p-8 rounded shadow">
    <h2 class="text-xl font-semibold text-center text-gray-800 mb-6">Yeni Şifre Belirle</h2>

    <div id="reset-alert" class="hidden mb-4 px-4 py-2 text-sm rounded bg-red-100 text-red-700"></div>

    <form id="reset-form" class="space-y-4">
        @Html.AntiForgeryToken()
        <input type="hidden" name="Token" value="@ViewBag.Token" />

        <div>
            <label for="NewPassword" class="block text-sm font-medium text-gray-700 mb-1">Yeni Şifre</label>
            <input name="NewPassword" type="password" required
                   class="w-full border border-gray-300 rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
        </div>

        <button type="submit"
                class="w-full bg-green-600 hover:bg-green-700 text-white text-sm font-semibold py-2 px-4 rounded transition">
            Şifreyi Güncelle
        </button>
    </form>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $("#reset-form").submit(function (e) {
            e.preventDefault();
            const $btn = $(this).find("button[type='submit']");
            $btn.prop("disabled", true).text("Kaydediliyor...");

            $.ajax({
                type: "POST",
                url: "/Auth/ResetPassword",
                data: $(this).serialize(),
                success: function () {
                    window.location.href = "/Auth/Login";
                },
                error: function (xhr) {
                    const msg = xhr.responseText || "Beklenmeyen bir hata oluştu. Lütfen daha sonra tekrar deneyiniz veya sistem yöneticisine başvurunuz.";
                    $("#reset-alert")
                        .removeClass("hidden")
                        .text(msg);
                },
                complete: function () {
                    $btn.prop("disabled", false).text("Şifreyi Güncelle");
                }
            });
        });
    </script>
}
